<% provide(:title, "Sign in") %>
 
  <div class="jumbotron">
    <div class="form_container">
      <div class="span6 offset3">
        <br />
        <h1>Sign in</h1>
        <br />

        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email, :class => "form_email" %>
          <%= f.text_field :email, :class => "form_input" %>

          <%= f.label :password, :class => "form_password" %>
          <%= f.password_field :password, :class => "form_input" %>

          <%= f.submit "Sign in", class: "radius button" %>
        <% end %>
        <p>New user? 
          <%= link_to "Create an account!", signup_path %></p>
        <br />
      </div>
    </div>
  </div>