- provide(:title, 'Sign up')
.jumbotron
  %h1 Traffic Hero
  %h2 Sign Up!
  .row
    .span6.offset3
      .form_container
        = form_for(@user) do |f|
          = render 'shared/error_messages'
          = f.label :name 
          = f.text_field :name 
          = f.label :email
          = f.text_field :email
          = f.label :password
          = f.password_field :password
          = f.label :password_confirmation, "Confirmation"
          = f.password_field :password_confirmation
          = f.submit "Create my account", class: "button radius"
          = link_to "Sign In", signin_path
